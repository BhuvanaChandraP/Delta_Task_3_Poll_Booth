        <% for(let users of use) { %>
        <center>
            &nbsp &nbsp&nbsp &nbsp <a href = "/profile/<%= users._id %>"><%= users.username %></a>&nbsp &nbsp &nbsp &nbsp
        </center>
        <% }%>     
    </ul>
    
</div>

</body>
</html>







